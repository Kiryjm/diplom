@using System.Collections
@using Tariff.Models
@model List<Tariff.Models.Rate>


@{
    ViewBag.Title = "CompareRates";
}

<table class="table">
    <tr>
        <th>
            RATE PARAMETERS
        </th>
        @for (int i = 0; i < Model.Count; i++)
        {
            <th>
                @Model[i].Name
            </th>
        }
    </tr>
    @for (int i = 0; i < (ViewBag.paramTypes as IList).Count; i++)
    {
        <tr>
            <td>
                @((ViewBag.paramTypes[i] as ParamType).Name)
            </td>
            @foreach (var rate in Model)
            {
                <td>
                    @if (rate.Params[i] != null)
                    {
                        @rate.Params[i].Value
                    }

                </td>
            }
        </tr>
    }
</table>