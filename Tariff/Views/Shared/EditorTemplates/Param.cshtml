@using Tariff.Models
@model Tariff.Models.Param

@Html.HiddenFor(x => Model.Id)
@Html.HiddenFor(x => Model.ParamTypeId)
@Html.HiddenFor(x => Model.RateId)


<div class="control-label col-md-2">
    @Html.DisplayFor(x => Model.ParamType.Name)
</div>
<div class="control-label col-md-10">
    @{
        if (Model.ParamType.ParamDataType.Value == ParamDataType.Bool)
        {
            @Html.CheckBox("Value", new {@class = "col-md-10", @name = Model.Value, @id = "check-box", @onclick = "ChangeLabelText()"})
            <label id="check-box-label" class="control-label col-md-2" onclick=ChangeLabelText()>Disabled</label>
        }
        else
        {
            @Html.EditorFor(x => Model.Value, new {htmlAttributes = new {@class = "form-control"}})
        }
    }

</div>
<script type="text/javascript">

    function ChangeLabelText() {

        var LabelText = $('#check-box-label').text();
        if (LabelText === "Disabled") {
            $('#check-box-label').text("Enabled");
        } else {
            $('#check-box-label').text("Disabled");
        }
    };

</script>